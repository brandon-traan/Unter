<% provide(:title, @user.id) %>

<h1>
  <%= @user.firstname %><br>
</h1>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <div>
        <% if true %>
          <%= label_tag :email %> :
          <%= @user.email %><br>
          <%= label_tag "Total rental charge" %> :
          <%= '%.2f' % @user.rentalCharge %><br>
          <%= label_tag "Available to rent car?" %>
          <%= (@user.available)? "Yes": "No" %><br>
        <% end %>
      </div>
    </section>
  </aside>
</div>
<% if isAdmin? || isSuperAdmin? %>
  <% if !current_user?(@user) %>
    <%= link_to "Delete", @user, method: :delete, data: { confirm: "Delete this user?" } %> |
  <% end %>
<% end %>
<%= link_to "home!", root_path %>
<%= link_to "bookings", bookings_path %>
<%= link_to "Cars", cars_path %>